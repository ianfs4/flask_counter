{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true, // new
        "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
        }
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "flake8.args": [
        "--max-line-length", "88"
    ],
    "black-formatter.args": ["--line-length", "88"]
}
